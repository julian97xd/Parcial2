<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cedula"
            android:inputType="number"/>

        <TextView
            android:id="@+id/Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <Spinner
            android:id="@+id/Estrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/etiSeleccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estrato:"
            android:inputType="number"/>

        <TextView
            android:id="@+id/Salario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salario" />

        <Spinner
            android:id="@+id/NivelEducativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/etiSeleccion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel de Educacion:" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CERRAR"
            android:id="@+id/Cerrar"></Button>
    </LinearLayout>

</LinearLayout>
