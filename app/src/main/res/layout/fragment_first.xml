<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_Cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cedula"
            android:inputType="number"/>

        <TextView
            android:id="@+id/t_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <Spinner
            android:id="@+id/t_Estrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t_etiSeleccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estrato:" />

        <TextView
            android:id="@+id/t_Salario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salario" />

        <Spinner
            android:id="@+id/t_NivelEducativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t_etiSeleccion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel de Educacion:"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Editar"
            android:text="Editar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Eliminar"
            android:text="Eliminar"/>
    </LinearLayout>

</LinearLayout>